{
    "manifest_version": 2,
    "default_locale": "es",
    "name": "__MSG_Titulo__",
    "description": "__MSG_Descripcion__",
    "version": "0.5",
    "minimum_chrome_version": "69.0",        
    "icons": {
      "128": "icons/icon128.png"
    },
    "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"        
      }
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "windows": "Alt+P",
          "linux": "Alt+P",
          "mac": "Alt+P",
          "chromeos": "Alt+P"          
        },
        "description": "PiP video"
      },
      "open-duplicate-tab": {
        "suggested_key": {
          "windows": "Alt+O",
          "linux": "Alt+O",
          "mac": "Alt+O",
          "chromeos": "Alt+O"          
        },
        "description": "Abre un duplicado de la pesta√±a actual"
      },
      "toggle-play": {
        "suggested_key": {
          "windows": "Alt+Shift+P",
          "linux": "Alt+Shift+P",
          "mac": "Alt+Shift+P",
          "chromeos": "Alt+Shift+P"          
        },
        "description": "Alterna Play/Pause video"
      }
    },  
    "permissions": [
      "<all_urls>"
    ]
  }